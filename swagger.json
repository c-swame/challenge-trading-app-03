{
  "openapi": "3.0.1",
  "info": {
    "title": "Trading-App Api",
    "description": "Documentation from Trading-App Api",
    "version": "0.3.1",
    "contact": {
      "email": "caio_swame@hotmail.com"
    }
  },
  "basePath": "/",

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UserReturn": {
        "type": "object",
        "properties": {
          "codClient": {
            "type": "number"
          },
          "admin": {
            "type": "boolean"
          },
          "nome": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "cpf": {
            "type": "string"
          }
        }
      }
    }
  },

  "paths": {
    "/users": {
      "get": {
        "summary": "Busca todos os usuários",
        "description": "Rota buscar dados de todos os usuários",
        "tags": ["Users"],

        "responses": {
          "200": {
            "description": "OK <hr /> array contendo todos usuários cadastrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "properties": {
                      "data": {
                        "type": "object",
                        "properties": {
                          "codClient": {
                            "type": "number"
                          },
                          "admin": {
                            "type": "boolean"
                          },
                          "nome": {
                            "type": "string"
                          },
                          "email": {
                            "type": "string"
                          },
                          "telefone": {
                            "type": "string"
                          },
                          "cpf": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  },
                  "example": [
                    {
                      "codCliente": 1,
                      "nome": "user1",
                      "email": "email1@email.com",
                      "telefone": "9999999999",
                      "saldo": "1000.00",
                      "cpf": "123.456.789-01",
                      "admin": false,
                      "criadoEm": "2022-07-27T13:41:51.000Z",
                      "atualizadoEm": "2022-07-27T13:41:51.000Z"
                    },
                    {
                      "codCliente": 2,
                      "nome": "user2",
                      "email": "email2@email.com",
                      "telefone": "9999999999",
                      "saldo": "2000.00",
                      "cpf": "223.456.789-02",
                      "admin": false,
                      "criadoEm": "2022-07-27T13:41:51.000Z",
                      "atualizadoEm": "2022-07-27T13:41:51.000Z"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },

    "/sign/up": {
      "post": {
        "description": "Rota para cadastro de novos usuários",
        "summary": "Cadastra um novo usuário",
        "tags": ["Sign"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string",
                    "description": "Nome do usuário",
                    "required": true
                  },
                  "email": {
                    "type": "string",
                    "required": true,
                    "description": "Email do usuário. Será utilizado para fazer o login futuramente."
                  },
                  "cpf": {
                    "type": "string",
                    "required": true,
                    "description": "CPF do usuário. Será utilizado para fazer o login futuramente e em validações."
                  },
                  "telefone": {
                    "type": "string/number",
                    "required": false,
                    "description": "Telefone para contato"
                  },
                  "password": {
                    "type": "string",
                    "required": true,
                    "description": "Senha do usuário"
                  }
                },
                "example": {
                  "nome": "user25",
                  "email": "email25@email.com",
                  "telefone": "parametro não obrigatório. apagar ou adicionar um telefone",
                  "cpf": "123.456.789-25",
                  "password": "senhaaa25"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created. <hr /> Conjuto de dados do usuário.<br /><br /> Úteis para auxilar no redirecionamento e renderização de algumas informações",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/UserReturn"
                    },
                    "token": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "data": {
                      "codCliente": 25,
                      "admin": false,
                      "nome": "user25",
                      "email": "email25@email.com",
                      "telefone": "caso um telefone tenha sido adicionado, retornará aqui",
                      "cpf": "123.456.789-25"
                    },
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJjb2RDbGllbnRlIjozMCwiYWRtaW4iOmZhbHNlLCJpYXQiOjE2NjM2MjQyMzQsImV4cCI6MjYxMDM1MjIzNH0.aTJywn4qpvuTDK0ckY15AmeVwSweWIXB8Eq-igsEMmc"
                  }
                }
              }
            }
          }
        }
      }
    },


    "/ativos/{assetId}": {
      "get": {
        "description": "Busca dados de uma ação pelo seu id",
        "summary": "Busca ação pelo id",
        "tags": ["Assets"],
        "security": [{"bearerAuth": []}],
  
        "parameters": [
          {
            "in": "path",
            "name": "assetId",
            "required": true
          }
        ],
  
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "codAtivo": {
                          "type": "number"
                        },
                        "QtdeAtivo": {
                          "type": "number"
                        },
                        "Valor": {
                          "type": "string"
                        }
                      }
                    },
                    "token": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "data": {
                      "codAtivo": 1,
                      "QtdeAtivo": 95,
